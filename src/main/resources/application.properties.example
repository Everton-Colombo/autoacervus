spring.application.name=autoacervus

# Autoacervus properties
autoacervus.renewalMaxUsersPerThread=10
autoacervus.renewalCronExpression=0 2 * * * *

# Enables forms to perform requests with PUT and DELETE methods
spring.mvc.hiddenmethod.filter.enabled=true

# Datasource properties:
# spring.jpa.hibernate.ddl-auto=update   # Updates the schema to match the entity classes. Use with caution.
spring.datasource.url=jdbc:mysql://localhost:3306/autoacervus
spring.datasource.username=
spring.datasource.password=
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
# Forces hibernate to use the table and column names specified by the entity classes' annotations (should have been the default behavior, but wasn't)
spring.jpa.hibernate.naming.physical-strategy=org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl

# Logging properties
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Email Properties
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=no-reply@example.com
spring.mail.password=EMAIL_PASSWORD
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
spring.mail.default-encoding=UTF-8
spring.mail.properties.mail.mime.charset=UTF
